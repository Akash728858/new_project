{
  "name": "kodnestcareers-monorepo",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "echo \"no lint yet\"",
    "test": "echo \"no tests yet\"",
    "dev:web": "turbo run dev --filter=web",
    "dev:worker": "turbo run dev --filter=worker",
    "dev:local": "pnpm run docker:up && pnpm dev",
    "docker:up": "docker compose -f docker-compose.local.yml up -d",
    "docker:down": "docker compose -f docker-compose.local.yml down",
    "docker:reset": "docker compose -f docker-compose.local.yml down -v"
  }
}
